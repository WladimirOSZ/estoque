<h2 class="mb-4">Lotes finalizados aguardando validação ou cancelamento </h2>
<div id="lots_waiting">
  <% if @lots.exists? %>
    <%= render 'shared/display_lots', lots: @lots %>
  <% else %>
    <p> Não há lotes aguardando validação ou cancelamento. </p>
  <% end %>
</div>

<hr>
<h2>
  Lotes finalizados validados
</h2>

<div id="lots_approved">
  <% if @lots_succeded.exists? %>
    <%= render 'shared/display_lots', lots: @lots_succeded %>
  <% else %>
    <p> Não há lotes finalizados e validados. </p>
  <% end %>
</div>

<hr>
<h2>
  Lotes finalizados cancelados
</h2>

<div id="lots_canceled">
  <% if @lots_canceled.exists? %>
    <%= render 'shared/display_lots', lots: @lots_canceled %>
  <% else %>
    <p> Não há cancelados. </p>
  <% end %>
</div>
