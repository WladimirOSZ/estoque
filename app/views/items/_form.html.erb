<%= form_with model: @items do |f| %>
  
  <div class="mb-3">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :photo %>
    <%= f.file_field :photo, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :weight %>
    <%= f.number_field :weight, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :width %>
    <%= f.number_field :width, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :height %>
    <%= f.number_field :height, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :depth %>
    <%= f.number_field :depth, class:"form-control" %>
  </div>

  <%# pra cada categoria cadastrada, exibe elas como um checkbox %>

  <% unless @categories.empty? %>
      <h4 class="mt-3">Lista de Categorias: </h4>
      <%= f.collection_check_boxes(:category_id, @categories, :id, :name) do |b| %>
        <div class="form-check">
          <%= b.check_box class:"form-check-input" %>
          <%= b.label class:"form-check-label" %>
        </div>
      <% end %>
  <% end %>

  <div class="mb-3">
    <%= f.submit class:"btn btn-primary" %>
  </div>




<% end %>