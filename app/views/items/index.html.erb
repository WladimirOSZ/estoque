<% content_for :head do %>
  <style>
    .card {
      min-height: 300px;
    }
  </style>
<% end %>
<h1>Itens</h1>
<% if is_admin? %>
  <%= link_to 'Cadastrar item', new_item_path, class:"btn btn-success" %>
<% end %>
<% unless @items.empty? %>
  <h4 class="mt-3">Lista de Items: </h4>
  <div class="row align-items-center">
    <%= render 'shared/display_items', items: @items, display_lot_button:true%>
  </div>
<% else %>
  <p>Nenhum item cadastrado.</p>
<% end %>
