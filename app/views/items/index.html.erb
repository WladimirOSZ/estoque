<% content_for :head do %>
  <style>
    .card {
      min-height: 300px;
    }
  </style>
<% end %>

<h1>Itens</h1>
<% if is_admin? %>
  <%= link_to 'Cadastrar item', new_item_path, class:"btn btn-success" %>
<% end %>
<% unless @items.empty? %>
  <h4 class="mt-3">Lista de Items: </h4>   

  <div class="row align-items-center">
      <% @items.each do |item| %>
        <div class="col-sm-12 col-md-4 col-lg-3">
          <div class="card text-dark bg-light mb-3" style="max-width: 18rem;" id="item-<%= item.code %>" >
            <% if item.photo.attached? %>
              <%= image_tag item.photo, class: 'card-img-top' %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= item.name %></h5>
              <p class="card-text">
                <%= item.description[0,100] %>...
              </p>
            </div>
            <div class="card-footer">
              <%= link_to 'Ver item', item, class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %> 
  </div>
<% else %>
  <p>Nenhum item cadastrado.</p>
<% end %>
