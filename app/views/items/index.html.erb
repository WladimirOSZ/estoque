<h1>Itens</h1>

<% if is_admin? %>
  <%= link_to 'Cadastrar item', new_item_path, class:"btn btn-success" %>
<% end %>

<% unless @items.empty? %>
  <h4 class="mt-3">Lista de Items: </h4>
  <div class="col-md-12 col-lg-4">
    <table class="table table-striped table-dark table-hover table-bordered">
      <tr>
        <th class="w-100">Item</th>
        <th class="pe-3">Opções</th>
      </tr>
      <% @items.each do |item| %>
      <tr>
        <td class="align-center"><%= item.name %></td>
        <td class="d-flex justify-content-center align-items-center"> <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button> </td>
      </tr>
      <% end %>
    </table>
  </div>
<% else %>
  <p>Nenhum item cadastrado.</p>
<% end %>