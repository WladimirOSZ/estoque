
<% if is_admin? %>
  <%= link_to 'Cadastrar categoria', new_category_path, class:"btn btn-success" %>
<% end %>

<% unless @categories.empty? %>
  <h4 class="mt-3">Lista de Categorias: </h4>
  <div class="col-md-12 col-lg-4">
    <table class="table table-striped table-dark table-hover table-bordered">
      <tr>
        <th class="w-100">Categoria</th>
        <th class="pe-3">Opções</th>
      </tr>
      <% @categories.each do |category| %>
      <tr>
        <td class="align-center"><%= category.name %></td>
        <td class="d-flex justify-content-center align-items-center"> <button class="btn btn-danger"><i class="fa-solid fa-trash"></i></button> </td>
      </tr>
      <% end %>
    </table>
  </div>
<% else %>
  <p>Nenhuma categoria cadastrada.</p>
<% end %>