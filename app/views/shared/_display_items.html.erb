<% content_for :head do %>
  <%= stylesheet_link_tag 'item' %>
<% end %>
<% items.each do |item| %>
  <div class="col-sm-12 col-md-4 col-lg-3">
    <div class="card mb-3" id="item-<%= item.code %>" >
      <div class="card-img-container">
        <% if item.photo.attached? %>
          <%= image_tag item.photo, class: 'card-img-top' %>
        <% end %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= item.name %></h5>
        <p class="card-text">
          <%= item.description[0,100] %>...
        </p>
      </div>
      <div class="card-footer">
        <%= link_to 'Ver item', item, class: 'btn btn-primary' %>
        <% if display_lot_button.present? && display_lot_button %>
          <% if item.lot.present? %>
            <%= link_to 'Ver lote', item.lot, class: 'btn btn-primary' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
